{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": false,
    "outDir": "build",
    "rootDir": ".",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [ "ES2015" ]

  },
  "exclude": [
    "node_modules"
  ]
}
